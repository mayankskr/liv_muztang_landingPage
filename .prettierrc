{
  "plugins": ["prettier-plugin-tailwindcss"],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.json"],
      "options": { "parser": "json" }
    },
    {
      "files": ["*.md"],
      "options": { "proseWrap": "always" }
    },
    {
      "files": ["*.html", "*.vue", "*.svelte", "*.jsx", "*.tsx"],
      "options": { "parser": "babel" }
    }
  ]
}
